{
    "include": ["./src"],
    "exclude": ["./node_modules"],
    "compilerOptions": {
        "lib": ["ES2022"],
        "module": "ES2022",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "target": "ES2022",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": "./"
    }
}